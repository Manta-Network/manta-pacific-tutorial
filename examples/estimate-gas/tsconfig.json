{
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es2021",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "lib": [
      "es2015",
      "es5",
      "dom",
      "es2021"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    "artifacts/**/*.json"
  ],
  "exclude": [
    "dist/**/*",
  ],
}
